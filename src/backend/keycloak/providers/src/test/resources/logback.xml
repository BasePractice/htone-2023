<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%-19thread] %-5level %-40logger - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="io.undertow" level="WARN"/>
    <logger name="org.xnio" level="WARN"/>
    <logger name="org.jboss.logging" level="WARN"/>
    <logger name="org.apache.xml.security.utils.ElementProxy" level="WARN"/>
    <logger name="org.apache.xml.security.transforms.Transforms" level="WARN"/>
    <logger name="org.apache.xml.security.Init" level="WARN"/>
    <root level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>